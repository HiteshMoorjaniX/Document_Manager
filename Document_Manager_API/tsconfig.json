{
  "compilerOptions": {
    "target": "ES6",                       // Compile to ES6 JavaScript
    "module": "CommonJS",                   // CommonJS for Node.js
    "strict": true,                         // Enable strict type-checking options
    "esModuleInterop": true,                // Allow importing non-ESM modules
    "skipLibCheck": true,                   // Skip checking of declaration files
    "outDir": "./dist",                     // Output folder for compiled JavaScript
    "rootDir": "./src",                     // Source folder for TypeScript files
    "resolveJsonModule": true               // Allow importing JSON files
  },
  "include": [
    "src/**/*.ts"                            // Include all TypeScript files under `src` folder
  ],
  "exclude": [
    "node_modules"                           // Exclude `node_modules` from compilation
  ]
}
